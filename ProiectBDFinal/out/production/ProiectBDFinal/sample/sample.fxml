    <center>
        <Label fx:id="welcomeLabel" alignment="CENTER" stylesheets="@styles.css" textAlignment="CENTER">

        </Label>
    </center>

    <bottom>
        <ToolBar stylesheets="stylesToolbar.css">
            <HBox spacing="20">
                <Label text="UTCN" />
                <Label text="ADRESA: Strada Memorandumului 28, Cluj-Napoca 400114" />
                <Label text="TELEFON: +4 0264 401 200" />
                <Label text="FAX: +4 0264 592 055" />
